<form action="/quiz">
    <label for="questionCount">How many Questions?(4-8)</label>
    <br>
    <input type="number" id="questionCount" name="questionCount" min="4" max="8" value="4" required/>
    <br>
        <input type="checkbox" id="Linux" name="Linux">
	    <label for="Linux">Linux</label>
	    <input type="checkbox" id="DevOps" name="DevOps" checked>
	    <label for="DevOps">DevOps</label>
	    <input type="checkbox" id="SQL" name="SQL">
	    <label for="SQL">SQL</label>
	    <input type="checkbox" id="Bash" name="Bash" checked>
	    <label for="Bash">Bash</label>
	<br>
	    <label class="radio-inline"><input type="radio" name="difficulty" checked value="Easy">Easy</label>
        <label class="radio-inline"><input type="radio" name="difficulty" value="Medium">Medium</label>
        <label class="radio-inline"><input type="radio" name="difficulty" value="Hard">Hard</label>
    <br>
    
    <input type="submit" class="btn btn-default btn-lg" value="Start Quiz">
</form>